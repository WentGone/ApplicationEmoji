<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Main_TV_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/Main_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示内容："
        android:layout_above="@id/Main_TV_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Main_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_above="@id/Main_TV_title">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/Main_Layout_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_above="@id/Main_RecyclerView">
        <EditText
            android:id="@+id/Main_ET"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入..."/>
        <ImageView
            android:id="@+id/Main_IM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/expression"/>
        <Button
            android:id="@+id/Main_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示"/>
    </LinearLayout>
</RelativeLayout>
